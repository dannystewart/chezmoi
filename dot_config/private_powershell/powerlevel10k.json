{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "upgrade": {
    "source": "cdn",
    "interval": "168h",
    "auto": false,
    "notice": false
  },
  "blocks": [
    {
      "type": "rprompt",
      "segments": [
        {
          "properties": {
            "time_format": "3:04:05 PM"
          },
          "template": "  {{ .CurrentDate | date .Format }} ",
          "foreground": "#2ac3de",
          "type": "time",
          "style": "plain"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "text",
          "style": "diamond",
          "leading_diamond": "",
          "trailing_diamond": "\uE0B0",
          "foreground": "#ffffff",
          "background": "#0577BD",
          "template": ">_ ",
          "properties": {
            "prefix": "",
            "postfix": ""
          }
        },
        {
          "type": "path",
          "template": " {{ .PWD }} ",
          "foreground": "#008AB3",
          "properties": {
            "style": "folder"
          }
        },
        {
          "template": "{{ .HEAD }} ",
          "foreground": "#5fd700",
          "type": "git",
          "style": "plain"
        },
        {
          "template": "❯ ",
          "foreground": "#5fd700",
          "type": "text",
          "style": "plain"
        }
      ]
    }
  ],
  "version": 3
}
